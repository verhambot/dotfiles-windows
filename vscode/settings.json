{
    "workbench.settings.editor": "json",
    "workbench.colorTheme": "One Dark Pro Darker",
    "telemetry.telemetryLevel": "off",
    "editor.formatOnSave": true,
    "editor.fontFamily": "Consolas",
    "editor.fontSize": 16,
    "editor.lineHeight": 1.5,
    "editor.multiCursorModifier": "ctrlCmd",
    "debug.console.fontSize": 15,
    "debug.console.lineHeight": 1.5,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "flake8.args": [
        "--ignore",
        "E501"
    ],
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, UseTab: Never, IndentWidth: 2, TabWidth: 2, BreakBeforeBraces: Attach, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -4, NamespaceIndentation: All, FixNamespaceComments: false }",
    "platformio-ide.disablePIOHomeStartup": true,
    "platformio-ide.autoOpenPlatformIOIniFile": false
}